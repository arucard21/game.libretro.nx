<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.nx"
		name="Cave Story (NXEngine)"
		version="1.0.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>exe</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
		<supports_mouse>false</supports_mouse>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Cave Story (NXEngine) 1.0.0.4</summary>
		<description>NXEngine is a complete open-source clone/rewrite of the masterpiece jump-and-run platformer Doukutsu Monogatari (also known as Cave Story).

Supported files: .exe

License: GPLv3</description>
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<assets>
			<icon>icon.png</icon>
		</assets>
	</extension>
</addon>