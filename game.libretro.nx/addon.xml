<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.nx"
		name="NXEngine"
		version="1.0.2"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="libgame.libretro.nx.so"
                   library_linux="game.libretro.nx.so"
                   library_osx="game.libretro.nx.dylib"
                   library_windx="game.libretro.nx.dll"
                   library_wingl="game.libretro.nx.dll">
		<platforms></platforms>
		<extensions>exe</extensions>
		<allowvfs>false</allowvfs>
		<blockextract>false</blockextract>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">NXEngine v1.0.0.4</summary>
		<description>NXEngine is a complete open-source clone/rewrite of the masterpiece jump-and-run platformer Doukutsu Monogatari (also known as Cave Story).

Supported files: .exe

Source: https://github.com/libretro/nxengine-libretro</description>
		<platform>all</platform>
	</extension>
</addon>
